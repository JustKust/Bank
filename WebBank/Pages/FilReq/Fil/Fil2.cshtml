@page
@model WebBank.Pages.FilReq.Fil.Fil2Model
@{
    <h1>Вклады</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Deposit[0].DepName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Deposit[0].CurId)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Deposit)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DepName)
                    </td>
                    <td>
                        @Model.Currency.Name

                    </td>
                </tr>
            }
        </tbody>
    </table>
}